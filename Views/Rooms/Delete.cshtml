@model HOTEL1.Models.Room

@{
    ViewData["Title"] = "Delete";
}
@{
    List<Hotel> hotels = ViewData["Hotels"] as List<Hotel>;
}

@if (hotels.Count() == 0)

{

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Room</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RoomNo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RoomNo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FloorNo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FloorNo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Image)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Image)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>

        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>

}
else
{
    <h5 class="bg-warning" style="padding:5px; text-align:center;">Sorry! We cannot delete this Room because it is registered as a Room of Hotel(s)</h5>
    <table style="text-align:center;">
        <thead>
            <tr>
                <th>Hotel Name</th>
                <th>Hotel Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hotel in hotels)
            {
                if (hotel.RoomId == Model.Id)
                {
                    <tr>
                        <td style="width:200px;">@hotel.Title</td>
                        <td><img style="width:200px;" src="@hotel.URL" alt="@hotel.Title" /></td>
                    </tr>
                }

            }
        </tbody>
    </table>
    <h5 class="bg-primary" style="padding:5px; text-align:center;">Please delete/update these Hotel before deletion of Room.</h5>
}
