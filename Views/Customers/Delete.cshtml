@model HOTEL1.Models.Customer

@{
    ViewData["Title"] = "Delete";
}

<div>
    <h4>Delete the Vendor</h4>
    <hr />
    @{
        List<CustomerofHotel> customerofhotels = ViewData["customerofhotels"] as List<CustomerofHotel>;
    }
    @if (customerofhotels.Count == 0)
    {

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Customer</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Image)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Image)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Phoneno)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Phoneno)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nationaity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nationaity)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Country)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Country)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Address)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    }
    else
    {
        <h5 class="bg-warning" style="padding:5px; text-align:center;">Sorry! We cannot delete this Vendor because he/she is registered as a Customer of hotel(s)</h5>
        <table style="text-align:center;">
            <thead>
                <tr>
                    <th>Hotel Name</th>
                    <th>Hotel Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hotel in ViewData["hotels"] as List<Hotel>)
                {


                    foreach (var customerofhotel in customerofhotels)
                    {
                        if (hotel.Id == customerofhotel.HotelId)
                        {
                            <tr>
                                <td style="width:200px;">@hotel.Title</td>
                                <td><img style="width:200px;" src="@hotel.URL" alt="@hotel.Title" /></td>
                            </tr>
                        }
                    }

                }
            </tbody>
        </table>
        <h5 class="bg-primary" style="padding:5px; text-align:center;">Please delete/update these Hotels before deletion of Customer.</h5>
    }

</div>